<h1>Tagesliste Schicht <%= @shift %> <%= l @shift_time[0] %> bis <%= l @shift_time[1] %></h1>
<table style = "margin: 2px;">
<tr>
    <th></th>
	<th>Datum</th>
	<th>PNr</th>
    <th>S</th>
    <th>Kunde</th>
	<th>KomNr</th>
	<th>Sorte</th>
	<th>Brutto</th>
	<th>Tara</th>
	<th>Netto</th>
</tr>

<% unless @weightings.empty? %>

<% @weightings.each_with_index do |w,i|%>
	<tr>
		<td><%= i+1 %></td>
		<td><%= l w.created_at, :format => :coupon %></td>
		<td><%= w.pid %></td>
		<td><%= w.shift %></td>
		<td></td>
		<td><%= w.ref || w.barcode %></td>
		<td><%= w.sort_list.description %></td>
		<td><%= w.weight_brutto %> <%= w.weight_unit %></td>
		<td><%= w.weight_tara %> <%= w.weight_unit %>T</td>
		<td><%= w.weight_netto %> <%= w.weight_unit %>NE</td>
	</tr>
<% end %>
	<tr class="sum">
		<td colspan="9"><%= @weightings.count %> Wiegung(en) mit Summe</td>
		<td><%= @sum %><%= @weightings.first.weight_unit %></td>
	</tr>
<% end %>
</table>