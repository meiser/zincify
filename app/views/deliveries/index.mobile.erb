<% @deliveries.each do |delivery| %>
  <tr>
    <td><%= delivery.customer_id %></td>
    <td><%= delivery.reference %></td>
    <td><%= delivery.deadline %></td>
    <td><%= link_to 'Show', delivery %></td>
