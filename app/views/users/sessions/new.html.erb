<h4><%= t("authentification.login.header") %></h4>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "ym-form"}) do |f| %>
  <div class="field">
  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %>
  </div>

  <div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>
  
  <% if devise_mapping.rememberable? -%>
	<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="button">
    <%= f.submit %>
  </div>
<% end %>



<%= render "devise/shared/links" %>
