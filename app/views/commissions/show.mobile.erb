<h2>Status</h2>

<div class="status"></div>


<%= javascript_tag do %>
$(function(){
  var my_client = new Faye.Client("<%= FAYE_URL %>");
  my_client.subscribe("/status<%= url_for @commission %>", function(data){
    $("div.status").toggleClass("highlight");
  });
});
<% end %>

