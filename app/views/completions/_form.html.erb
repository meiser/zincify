<%= form_for(@completion,:html => {:class => "ym-form linearize-form"}) do |f| %>
  <%= content_for :messages do %>
    <%= model_messages(@completion) %>
  <% end %>

  <div class="ym-fbox-text">
    <%= f.label :sort_list_id %>
    <%= f.collection_select( :sort_list_id, SortList.all, :id, :desc_with_number, :include_blank => false) %>
  </div>
  
  <div class="ym-fbox-text">
    <%= f.label :ref  %>
    <%= f.text_field :ref, :autofocus => true, :value => "" %>
  </div>
  <div class="ym-fbox-text">
    <%= f.label :user%>
    <%= f.text_field :user, :disabled => true, :value => current_user.login %>
  </div>
  <div class="ym-fbox-text">
    <%= f.label :weight_brutto %>
    <%= f.text_field :weight_brutto, :disabled => false, :value => 1 %>
  </div>
  <div class="ym-fbox-text">
    <%= f.label :weight_netto %>
    <%= f.text_field :weight_netto, :disabled => false, :value => 1 %>
  </div>
  <div class="ym-fbox-text">
    <%= f.label :weight_tara %>
    <%= f.text_field :weight_tara, :disabled => false, :value => 0 %>
  </div>
  <div class="ym-fbox-button">
    <%= f.submit %>
  </div>
<% end %>

